<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allergies_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllergiesActivity"
    android:background="#FF5722">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Allergies"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Add Allergy Section -->
        <EditText
            android:id="@+id/allergyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter allergy"
            android:inputType="text" />

        <Button
            android:id="@+id/button_add_allergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:backgroundTint="#009688"
            android:text="Add Allergy"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:backgroundTint="#009688"
            android:text="Back"
            android:textColor="#FFFFFF" />

        <!-- ListView for Allergies -->
        <ListView
            android:id="@+id/allergiesListView"
            android:layout_width="match_parent"
            android:layout_height="574dp"
            android:layout_marginTop="16dp" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
